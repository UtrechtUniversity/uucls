\newif\if@dutch
\DeclareOptionBeamer{opensans}{%
  \PassOptionsToPackage{opensans}{beamerfontthemeuubeamer}
}
\DeclareOptionBeamer{merriweather}{%
  \@dutchfalse
  \PassOptionsToPackage{merriweather}{beamerfontthemeuubeamer}
}
\DeclareOptionBeamer{english}{%
  \PassOptionsToPackage{english}{beamerouterthemeuubeamer}
}
\DeclareOptionBeamer{dutch}{%
  \@dutchtrue
  \PassOptionsToPackage{dutch}{beamerouterthemeuubeamer}
}
\DeclareOptionBeamer{white}{%
  \PassOptionsToPackage{white}{beamerouterthemeuubeamer}
  \PassOptionsToPackage{white}{beamercolorthemeuubeamer}
}
\DeclareOptionBeamer{nodisclaimer}{%
  \PassOptionsToPackage{nodisclaimer}{beamerinnerthemeuubeamer}
}
\ExecuteOptionsBeamer{english,opensans}
\ProcessOptionsBeamer\relax
\RequirePackage[T1]{fontenc}
% TODO Maybe remove?
\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}
% Language selection routine
\if@dutch
  \RequirePackage[dutch]{babel}
\else
  \RequirePackage[english]{babel}
\fi
\mode<presentation>
\usefonttheme {uubeamer}
\useoutertheme{uubeamer}
\useinnertheme{uubeamer}
\usecolortheme{uubeamer}
\mode
<all>
